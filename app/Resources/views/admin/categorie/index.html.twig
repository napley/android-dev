{% extends 'admin/index.html.twig' %}

{% block title %}Gestion des catégories - Android-dev.fr{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>
    
    <ul>
        <li>
            <a href="{{ path('admin_categorie_new') }}">Créer une nouvelle catégorie</a>
        </li>
    </ul>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Vignette</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td><a href="{{ path('admin_categorie_show', { 'id': categorie.id }) }}">{{ categorie.id }}</a></td>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.slug }}</td>
                <td><img src="{{ categorie.vignette }}" width="40"/></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_categorie_show', { 'id': categorie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_categorie_edit', { 'id': categorie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
