{% extends 'admin/index.html.twig' %}

{% block title %}Gestion des articles - Android-dev.fr{% endblock %}

{% block body %}
    <h1>Liste d'article</h1>

    <ul>
        <li>
            <a href="{{ path('admin_article_new') }}">Cr√©er un nouvel article</a>
        </li>
    </ul>
        
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Vignette</th>
                <th>Sous titre</th>
                <th>Visible</th>
                <th>Top</th>
                <th>Published at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('admin_article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.titre }}</td>
                <td><img src="{{ article.vignette }}" width="40"/></td>
                <td>{{ article.sousTitre }}</td>
                <td>{% if article.visible %}Yes{% else %}No{% endif %}</td>
                <td>{% if article.top %}Yes{% else %}No{% endif %}</td>
                <td>{% if article.publishedAt %}{{ article.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_article_show', { 'id': article.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
