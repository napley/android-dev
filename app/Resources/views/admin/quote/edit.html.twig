{% extends 'admin/index.html.twig' %}

{% block title %}Modification de la quote {{ quote.id }} - Android-dev.fr{% endblock %}

{% block body %}
    <h1>Modification de la quote {{ quote.id }}</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('admin_quote_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
