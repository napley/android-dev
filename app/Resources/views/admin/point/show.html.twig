{% extends 'admin/index.html.twig' %}

{% block title %}Voir le point {{ point.id }} - Android-dev.fr{% endblock %}

{% block body %}
    <h1>Voir le point {{ point.id }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ point.id }}</td>
            </tr>
            <tr>
                <th>Pct</th>
                <td>{{ point.pct }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if point.date %}{{ point.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_point_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_point_edit', { 'id': point.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
